@model Capstone.View_Models.NewDeclarationViewModel
@{
    ViewBag.Title = "NewDeclaration";
    Layout = "~/Views/Shared/_Layout-Employee.cshtml";
}

<h2>New Declaration for @Model.Employee.Name</h2>

@using (Html.BeginForm("Save", "Employee"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.ExpenseAmount)
        @Html.TextBoxFor(m => m.Expense.ExpenseAmount, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.ExpenseAmount)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.DateIncurred)
        @Html.TextBoxFor(m => m.Expense.DateIncurred, "0:b dd MMM yyyy", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.DateIncurred)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Expense.ExpenseTypeId)
        @Html.DropDownListFor(m => m.Expense.ExpenseTypeId, new SelectList(Model.ExpenseTypes, "Id", "Type"), "Select Expense Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Expense.ExpenseTypeId)
    </div>

    <button type="submit" class="btn btn-primary">
        Save
    </button>
}
